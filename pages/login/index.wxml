<view class="flex-style-column layout-center">
<image class="logo-image" src="../../assets/logo.png"></image>
<view class="flex-style-base input-layout" style="margin-top: 88rpx;">
  <image class="icon-img" src="../../assets/account.png"></image>
  <input bindinput="handleUserName" class="input" placeholder="请输入账号/手机号" placeholder-style="color:#D9D9D9;" />
</view>

<view class="flex-style-base input-layout">
  <image class="icon-img" src="../../assets/password.png"></image>
  <input bindinput="handleUserPwd" password="{{true}}" class="input" placeholder="请输入密码" placeholder-style="color:#D9D9D9;" />
</view>

<view class="flex-style-base op-text-layout">
  <text class="op-text" bindtap="handleRegister">立即注册</text>
  <text class="op-text">忘记密码</text>
</view>

<text class="login-btn" bindtap="handleLogin">登  录</text>
<text class="login-wx" bindtap="handleLogin">微信一键登录</text>

<view style="flex: 1;"></view>

<view class="flex-style-base info-text-layout">
  <van-checkbox icon-size="24rpx" shape="square"></van-checkbox>
  <text class="info-text">我已阅读并同意</text>
  <text class="info-text" style="color: #0066FF;">《用户服务协议》</text>
  <text class="info-text">和</text>
  <text class="info-text" style="color: #0066FF;">《隐私政策》</text>
</view>
</view>