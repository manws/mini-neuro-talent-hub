page {
  height: 100%;
}

.container {
  align-items: flex-start;
  height: 100vh;
  background-color: #F6F6F6;
}

.header-layout {
  width: 100%;
  background-color: #01549C;
}

.swiper-view {
  width: 686rpx;
  height: 1;
  flex-grow: 1;
  padding-top: 16rpx;
  margin-left: 32rpx;
  margin-top: 32rpx;
  box-sizing: border-box;
}

.swiper-item-view {
  width: 686rpx;
  padding: 32rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.scroll-view {
  height: 0;
  flex-grow: 1;
  margin-top: 32rpx;
}

.toolbar-layout {
  width: 100%;
  justify-content: center;
  align-items: center;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 32rpx;
  transform: rotate(180deg);
}

.title-text {
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 50rpx;
  font-weight: 600;
}

.op-group-layout {
  width: 100%;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
}

.op-text {
  width: 323rpx;
  height: 80rpx;
  border-radius: 56rpx;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #ffffff;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
  font-weight: 600;
  background-color: #01549C;
  margin: 26rpx 0;
}

.op-text-zero {
  width: 323rpx;
  height: 80rpx;
  border-radius: 56rpx;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
  font-weight: 600;
  background-color: #EEEEEE;
  margin: 26rpx 0;
}

.op-text-pre {
  width: 323rpx;
  height: 80rpx;
  border-radius: 56rpx;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #01549C;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
  font-weight: 600;
  border: solid 1rpx #01549C;
  margin: 26rpx 0;
}

.op-text-disabled {
  width: 323rpx;
  height: 80rpx;
  border-radius: 56rpx;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
  font-weight: 600;
  background-color: #EEEEEE;
  margin: 26rpx 0;
}

.input-layout {
  width: 634rpx;
  height: 88rpx;
  align-items: center;
  margin-top: 32rpx;
  border: solid 1rpx #EEEEEE;
}

.textarea-layout {
  width: 634rpx;
  min-height: 120rpx;
  margin-top: 32rpx;
  border: solid 1rpx #EEEEEE;
  border-radius: 8rpx;
  padding: 16rpx 0;
}

.title {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 46rpx;
  font-weight: 600;
}

.input {
  width: 100%;
  height: 100%;
  padding-left: 24rpx;
  color: #333333;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 48rpx;
  font-weight: 400;
  caret-color: #01549C;
}

.textarea {
  width: 100%;
  min-height: 88rpx;
  padding: 16rpx 24rpx;
  color: #333333;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 48rpx;
  font-weight: 400;
  caret-color: #01549C;
  box-sizing: border-box;
}

.tips {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 0;
  line-height: 44rpx;
  font-weight: 400;
  margin-top: 32rpx;
  display: inline-block;
}

.upload-image-layout {
  flex-wrap: wrap;
}

.upload-image {
  width: 150rpx;
  height: 150rpx;
}

.van-uploader__preview {
  margin: 0 16rpx 16rpx 0;
}

.upload-img {
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 46rpx;
  font-weight: 600;
}

.upload-tips {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 0;
  font-weight: 400;
}

/* 新增表单组件样式 */
.form-item {
  margin-top: 32rpx;
}

.radio-item, .checkbox-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
}

.radio-text, .checkbox-text {
  margin-left: 16rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  line-height: 60rpx;
  flex: 1;
}

.radio-section {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #EEEEEE;
}

.radio-title {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333333;
  line-height: 44rpx;
  margin-bottom: 16rpx;
  display: block;
}

.description-input {
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #F8F8F8;
  border-radius: 8rpx;
}

.description-input .textarea {
  background-color: #FFFFFF;
  border: 1rpx solid #EEEEEE;
  border-radius: 4rpx;
  margin-top: 8rpx;
}

.description-label {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
  margin-bottom: 16rpx;
  display: block;
}

/* 分组样式 */
.group-container {
  padding: 16rpx 0;
}

.sub-item {
  margin-bottom: 48rpx;
  padding: 24rpx;
  background-color: #FAFAFA;
  border-radius: 8rpx;
  border-left: 4rpx solid #01549C;
}

.sub-title {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  margin-bottom: 16rpx;
  display: block;
  font-weight: 500;
}

.single-item {
  padding: 16rpx 0;
}

/* 单选框和复选框自定义样式 */
radio .wx-radio-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #CCCCCC;
}

radio .wx-radio-input.wx-radio-input-checked {
  border-color: #01549C;
  background-color: #01549C;
}

checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 4rpx;
  border: 2rpx solid #CCCCCC;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #01549C;
  background-color: #01549C;
}