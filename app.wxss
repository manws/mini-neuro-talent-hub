/**app.wxss**/
Page {
  background: #F6F7F8;
  font-size: 0.875rem;
  color: #7C7C7C;
  font-family: PingFangSC-Semibold;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.flex-style-base {
  display: flex;
  align-items: center;
  justify-content: center;

}

.flex-style-column {
  display: flex;
  flex-direction: column;
}

/* 通用样式 */
body,
ol,
ul,
h1,
h2,
h3,
h4,
h5,
h6,
p,
th,
td,
dl,
dd,
form,
fieldset,
legend,
input,
textarea,
select {
  margin: 0;
  padding: 0;
}

body {
  font: 28rpx '宋体', 'Arial Narrow', HELVETICA;
  -webkit-text-size-adjust: 100%;
  word-wrap: break-word;
}

a {
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

em {
  font-style: normal;
}

li {
  list-style: none;
}

img {
  border: 0;
  vertical-align: middle;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

p {
  word-wrap: break-word;
}

input {
  background: none;
  outline: none;
  border: none;
}

.label-text {
  color: black;
  font-size: 36rpx;
  font-weight: 600;
  align-self: flex-start;
  margin-left: 63rpx;
  margin-top: 60rpx;
}

.single-text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.two-text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dot {
  color: red;
  font-size: 16rpx;
  margin-left: 8rpx;
}

.empty-layout {
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.empty-image {
  width: 288rpx;
  height: 264rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-top: 32rpx;
}

.layout-style {
  align-items: flex-start;
}